<!doctype html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<title>Document</title>
	<script>
		var r = Math.random();
		var n = parseInt(r*color.length);
		var color=new Array(7);
		color[0]="red";
		color[1]="orange";
		color[2]="yellow";
		color[3]="green";
		color[4]="blue";
		color[5]="navy";
		color[6]="purple";

		function setBg(){
			//console.log(n);
			document.body.style.background=color[n];
		}

	</script>
</head>
<body>
	<input type="button" value="시작" onClick="setBg()">
</body>
</html>
